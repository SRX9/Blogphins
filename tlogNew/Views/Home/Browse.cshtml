@{
    ViewBag.Title = "Browse";
}

<div class="jumbotron row full" style="margin-top:-1%">
    <div class="col-sm-3">
        <header class="bg-dark  ">
            <div class="pl-3 pt-3" style="padding:2%">
                <h3 class=" text-light">
