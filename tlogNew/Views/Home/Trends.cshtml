@model IEnumerable<tlogNew.Models.Trend>
@{
    ViewBag.Title = "Trends";
}

<div class="jumbotron " style="margin-top:-10%">
    <div class="d-inline-block mb-4 ml-2">
        <a style="font-size:3vh" class="text-lowercase pr-4" href="/">
            <img src="https://img.icons8.com/ios-filled/80/000000/dolphin.png">
        </a>
        <h3 class="d-inline-block mt-3 text-lowercase">blog <kbd>phins</kbd></h3>
    </div>
    <h5 class="mb-3 text-primary bg-secondary p-2">
        <img src="https://img.icons8.com/material/30/000000/combo-chart--v4.png">
        today's top tags
    </h5>
    <ul class="list-group">
        @{ int i = 1;}
        @foreach (var t in Model.Take(10))
        {
            <li onclick="location.href='@Url.Action("Tags", "Home",new { tag=t.tag})'"
                style="cursor:pointer;font-size:2.5vh;font-weight:900" class="text-center text-info list-group-item d-flex justify-content-between align-items-center">
                #@i @t.tag
                @{ i++;}
                <span class="badge badge-primary badge-pill">@t.count</span>
            </li>
            <div class="bg-white m-1"></div>
        }

    </ul>

</div>

