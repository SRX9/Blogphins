                        {
                            <div class=" bg-secondary shadow br pl-3  p-2" style="cursor:pointer"
                                 onclick="location.href='@Url.Action("MicroBlog", "Blog", new {title=item.title, id =item.id, })'">
                                <p class="text-capitalize text-info" style="font-size:2vh;font-weight:900; cursor:pointer"
                                   >
                                    @item.title
                                <p class="text-secondary">- MicroBlog</p>

                            </div>
                           

                        }
                        if (item.type == 3)
                        {
                            <div class=" bg-secondary shadow pl-3 br p-2" style="cursor:pointer"
                                 onclick="location.href='@Url.Action("MegaBlog", "Blog", new {title=item.title, id =item.id, })'">
                                <p class="text-capitalize text-info" style="font-size:2vh;font-weight:900; "
                                   >
                                    @item.title
