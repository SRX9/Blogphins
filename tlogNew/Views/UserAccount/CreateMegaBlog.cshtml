@model tlogNew.Models.Megablog
@{

    ViewBag.Title = "Create MegaBlog | blogphins";
}
<div class="jumbotron container bg-secondary br shadow mt-3 full" >
    <h2><code style="color:black">Create</code> <kbd>MegaBlog</kbd></h2>
    <p>Maximum <b>20000</b> Characters Allowed.</p>
    <hr class="my-4">
    @using (Html.BeginForm())
    {


        <div style="width:">
            <div style="display:inline-block;">
                <h4>Title for MegaBlog</h4>
                <input required maxlength="100" class="br form-control"
                       style="width:300%"
                       name="title" type="text" placeholder="Write here">

            </div>





            <div style="display:inline-block;float:right">
                <h4>Blog Genre</h4>
                <select  required class="br custom-select" name="tag">
                    <option disabled value selected>Select Genre</option>
                    <option value="Information & Technology">Inforamtion & Technology</option>
                    <option value="Computer">Computer</option>
                    <option value="Tutorial/Guide">Tutorials/Guide</option>
                    <option value="Fashion">Fashion</option>
                    <option value="DIY">DIY</option>
                    <option value="Food">Food</option>
                    <option value="Lifestyle">Lifestyle</option>
                    <option value="Sports">Sports</option>
                    <option value="Health & Fitness">Health & Fitness</option>
                    <option value="Business/Finance">Business/Finance</option>
                    <option value="Industry">Industry</option>
                    <option value="Political">Political</option>
                    <option value="Books">Books</option>
                    <option value="Current Events">Current Events</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Music">Music</option>
                    <option value="Celebrities">Celebrities</option>
                    <option value="Problem & Solution">Problem & Solution</option>
                    <option value="Artist">Artist</option>
                    <option value="Infographics">Infographics</option>
                    <option value="Reviews">Reviews</option>
                    <option value="Comparison">Comparison</option>
                    <option value="Personal">Personal</option>
                    <option value="Games">Games</option>
                    <option value="Movies">Movies</option>
                    <option value="Funny">Funny</option>
                    <option value="Inspiration">Inspiration</option>
                    <option value="Engineering">Engineering</option>
                </select>
            </div>




        </div>

        <hr />
        <div style="padding-top:15px">
            <h3><img style="text-align:right" src="https://img.icons8.com/pastel-glyph/50/000000/ball-point-pen.png"></h3>
            <textarea id="mega" name="text"></textarea>
            <p class="text-danger">@ViewBag.error</p>
        </div>
        <input type="hidden" name="uname" value="@Session["uname"]" />
        <input type="hidden" name="uid" value="@Session["uid"]" />
        <input type="hidden" name="time" value="@DateTime.Today.ToShortDateString()" />

        <div style="text-align:right;padding-top:15px;">
            <button style="border-radius:50px" type="submit" class="btn btn-primary ">
            Post
                <svg  xmlns="http://www.w3.org/2000/svg" x="0px" y="0px"
                     width="32" height="32"
                     viewBox="0 0 172 172"
                     style=" fill:#000000;"><g fill="none" fill-rule="nonzero" stroke="none" stroke-width="1" stroke-linecap="butt" stroke-linejoin="miter" stroke-miterlimit="10" stroke-dasharray="" stroke-dashoffset="0" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode: normal"><path d="M0,172v-172h172v172z" fill="none"></path><g fill="#ffffff"><path d="M10.07813,10.16211l20.24024,65.08789h130.93164zM30.31836,86l-20.24024,65.0459l151.17188,-65.0459z"></path></g></g></svg>
            </button>
        </div>


    }

</div>

<script>
    function AvoidSpace(event) {
        var k = event ? event.which : window.event.keyCode;
        if (k == 32) return false;
    }
</script>
<script src="~/Scripts/tinymce/tinymce.js"></script>
<script src="~/Scripts/main.js"></script>