        </div>
    }

    <hr />

    <div class="btn-group btn-group-toggle shadow-lg"  data-toggle=" buttons">
        <button autofocus style="width:18.7vw" onclick="openCity(event, 'micro');" type="button" class="tablink btn btn-secondary">Micro Blogs</button>
        <button style="width:18.7vw" onclick="openCity(event, 'mega');" type="button" class="tablink btn btn-secondary">Mega Blogs</button>
