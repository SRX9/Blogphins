@model tlogNew.Models.Both
@{
    ViewBag.Title = @Model.user.username+" - tlogs " ;
}

<div class="jumbotron container bg-secondary">
    @if (Session["uid"] != null && Session["uid"].ToString() == Model.user.id.ToString())
    {
        <div style="text-align:right;color:black;font-weight:800;cursor:pointer">
            <img src="https://img.icons8.com/ios/30/000000/settings.png"> Settings
        </div>
    }
    <p class="display-3 text-break text-dark" style="width:100%">@Model.user.username</p>

    <div style="margin-bottom:2%">
        <span style="font-size:30px;color:black">
            @Model.user.readers
        </span>
        <span class="lead">Monthly Readers</span>
    </div>


    <h4>Bio</h4>
    <p class="" style="font-size:20px">@Model.user.bio</p>
    <hr class="my-4">
    <div style="display:inline-block;border-right:1px solid #d4d4d4">
        <blockquote style="padding-right:10px" class="blockquote text-center">
            <h3>@Model.microblog.Count()</h3>
            <footer class="">MicroBlogs</footer>
        </blockquote>
    </div>

    <div style="display:inline-block">
        <blockquote style="padding-left:10px" class="blockquote text-center">
            <h3>@Model.megablog.Count()</h3>
            <footer class="">MegaBlogs</footer>
        </blockquote>
    </div>
    @if (Session["uid"] != null && Session["uid"].ToString() == Model.user.id.ToString())
    {
        <div style="float:right;padding:8px;">
            <button onclick="location.href='@Url.Action("Choose", "UserAccount")'"
                    type="button" class="btn btn-dark   ">
                <img src="data:image/png;base64,">
                Write
