@model tlogNew.Models.User
@{
    ViewBag.Title = Model.username+" - blogphins";
}
<div class="mob">
    <div class="mb-3">
        <a style="font-size:3vh" class="text-lowercase pr-3" href="/">
            <img src="https://img.icons8.com/ios-filled/60/000000/dolphin.png">
        </a>
        <h4 class="d-inline-block mt-3 text-lowercase">blog <kbd>phins</kbd></h4>
    </div>
    <div class="row">
        <div class="col-4 border border-dark">
            <a href="/UserAccount/Settings" class="">
                Edit Account Details
            </a>
        </div>
        <div class="col-4 bg-dark">
            <a href="/UserAccount/ChangePassword" class="text-white ">
                Change Password
            </a>
        </div>
        <div class="col-4 border border-dark">
            <a href="/UserAccount/Delete" class="">
                Delete Account
            </a>
        </div>
    </div>
    <div class="col-12 mt-4 bg-secondary pt-3">
        <p style="font-size:2vh" class="text-secondary text-capitalize">Change Password</p>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>Old Password</p>
            <input required type="password" class="form-control mb-3" name="old"
                   placeholder="Old Password" id="inputDefault">
            <p class="text-danger">@ViewBag.old</p>
            <p>New Password</p>
            <input required type="password" class="form-control mb-3" name="new"
                   placeholder="New Password" id="inputDefault">
            <p>Confirm Passowrd</p>
            <input required type="password"
                   class="form-control mb-3" name="confirm"
                   placeholder="Confirm Passowrd" id="inputDefault">
            <p class="text-danger">@ViewBag.match</p>
            <hr />
            <button type="submit" class="float-right btn btn-primary">Update</button>
        }
        <p class="text-success">@ViewBag.update</p>
    </div>
</div>
    <div class="jumbotron full bg-light container ">

        <div class="row">
            <div class="col-4">
                <h4 class="mb-3 text-dark">Account Settings</h4>
                <div class="list-group">
                    <a href="/UserAccount/Settings" class="list-group-item list-group-item-action ">
                        Edit Account Details
                    </a>
                    <a href="/UserAccount/ChangePassword" class="list-group-item list-group-item-action active  ">
                        Change Password
                    </a>
                    <a href="/UserAccount/Delete" class="list-group-item list-group-item-action">
                        Delete Account
                    </a>
                </div>
            </div>
            <div class="col-6 ">
                <p style="font-size:2vh" class="text-secondary text-capitalize">Change Password</p>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <p>Old Password</p>
                    <input required type="password" class="form-control mb-3" name="old"
                           placeholder="Old Password" id="inputDefault">
                    <p class="text-danger">@ViewBag.old</p>
                    <p>New Password</p>
                    <input required type="password" class="form-control mb-3" name="new"
                           placeholder="New Password" id="inputDefault">
                    <p>Confirm Passowrd</p>
                    <input required type="password"
                           class="form-control mb-3" name="confirm"
                           placeholder="Confirm Passowrd" id="inputDefault">
                    <p class="text-danger">@ViewBag.match</p>
                    <hr />
                    <button type="submit" class="float-right btn btn-primary">Update</button>
                }
                <p class="text-success">@ViewBag.update</p>
            </div>
        </div>

    </div>

