@model tlogNew.Models.User

@{
    ViewBag.Title = "Register";
}

<div class="row full">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="container  jumbotron bg-light ">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h1 style="display:inline-block">Create Account</h1>
                    <img class="float-right" style="display:inline-block"
                         src="https://img.icons8.com/ios-filled/40/000000/dolphin.png">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control",
                           placeholder ="User Name" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            <p class="text-danger">@ViewBag.exists</p>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            @Html.EditorFor(model => model.bio, new { htmlAttributes = new { placeholder = "Bio", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Email Id", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <div class="">
                            <input type="submit" value="Create" class="btn btn-default btn-success" />
                        </div>
                    </div>
   
            }
            <hr />
            <div class="float-right">
                <p style="font-size:1.8vh;font-weight:900" class="container">
                    Already Have an Account
                    <span class="text-info "
                          style="cursor:pointer;font-weight:900" onclick="location.href='@Url.Action("Login", "UserAccount")'"><u>Sign in</u></span>
                </p>
            </div>
        </div>

    </div>
    <div class="col-sm-4"></div>

</div>
